{
  "info": {
    "name": "QA API Challenge - Firebase API Testing",
    "description": "Comprehensive test suite with positive and negative test cases",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Setup - Register & Login",
      "item": [
        {
          "name": "Register Test User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201 (Created)', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test('Response has success message', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.include('registered');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"{{test_email}}\", \"password\": \"{{test_password}}\"}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "register"
              ]
            }
          }
        },
        {
          "name": "Login Test User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response has JWT token', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.expect(jsonData.token).to.be.a('string');",
                  "    pm.environment.set('auth_token', jsonData.token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"{{test_email}}\", \"password\": \"{{test_password}}\"}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Response is array of products', function () { pm.expect(Array.isArray(pm.response.json())).to.be.true; });",
                  "pm.test('All products have required fields', function () {",
                  "    var products = pm.response.json();",
                  "    products.forEach(p => {",
                  "        pm.expect(p).to.have.property('id');",
                  "        pm.expect(p).to.have.property('name');",
                  "        pm.expect(p).to.have.property('price');",
                  "        pm.expect(p).to.have.property('stock');",
                  "    });",
                  "});",
                  "pm.test('[BUG] Stock value should not be negative', function () {",
                  "    var products = pm.response.json();",
                  "    var hasNegativeStock = products.some(p => p.stock < 0);",
                  "    if (hasNegativeStock) {",
                  "        var negativeProducts = products.filter(p => p.stock < 0);",
                  "        console.log('FOUND BUG: Products with negative stock:', negativeProducts);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "products"
              ]
            }
          }
        },
        {
          "name": "Search Product by Name (Exact Match)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Search returns array', function () { pm.expect(Array.isArray(pm.response.json())).to.be.true; });",
                  "pm.test('Search is case-sensitive', function () {",
                  "    var results = pm.response.json();",
                  "    results.forEach(p => pm.expect(p.name).to.equal('Laptop'));",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products?name=Laptop",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "products"
              ],
              "query": [
                {
                  "key": "name",
                  "value": "Laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Search Product - Case Mismatch (Negative)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Case-sensitive search returns empty', function () {",
                  "    var results = pm.response.json();",
                  "    pm.expect(results.length).to.equal(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products?name=laptop",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "products"
              ],
              "query": [
                {
                  "key": "name",
                  "value": "laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Product has required fields', function () {",
                  "    var p = pm.response.json();",
                  "    pm.expect(p).to.have.property('id');",
                  "    pm.expect(p).to.have.property('name');",
                  "    pm.expect(p).to.have.property('price');",
                  "    pm.expect(p).to.have.property('stock');",
                  "});",
                  "pm.test('Detailed product includes description', function () {",
                  "    var p = pm.response.json();",
                  "    if (p.isDetailed === true) pm.expect(p).to.have.property('description');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "products",
                "1"
              ]
            }
          }
        },
        {
          "name": "Get Non-existent Product (Negative)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 404', function () { pm.response.to.have.status(404); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/99999",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "products",
                "99999"
              ]
            }
          }
        }
      ]
    },
    {
